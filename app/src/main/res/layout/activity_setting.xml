                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="#f7f7f7">

                                                <FrameLayout
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"
                                                    android:layout_alignParentBottom="true"
                                                    android:alpha=".50"
