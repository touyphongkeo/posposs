                                                    android:layout_height="178dp"
                                                    android:background="@drawable/item_gradient2" />

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginRight="3dp"
                                                    android:gravity="center">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
